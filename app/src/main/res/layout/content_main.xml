<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="motiur_bdresult.bd.com.bdresult.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:shadowDx="0"
            android:shadowDy="0"
            android:textColor="#ffffff"
            android:shadowRadius="5"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:text="@string/govtResult"
            android:textSize="20sp" />


        <Button
            android:id="@+id/primaryResult"

            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape"
            android:fontFamily="serif"
            android:shadowColor="#A8A8A8"
            android:onClick="primaryResult"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"

            android:text="@string/primaryResult"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/seconderyResult"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape"

            android:onClick="seconderyResult"
            android:fontFamily="serif"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/sscResult"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/nuReslt"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape"

            android:onClick="nuResult"
            android:fontFamily="serif"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/nuResult"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/publicResult"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="serif"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:onClick="publicResult"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/publicUVResult"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button

            android:id="@+id/govtResult"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="serif"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:onClick="govtResult"
            android:shadowRadius="5"
            android:text="@string/govtResultMain"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

    </LinearLayout>

    </ScrollView>

    <!-- view for AdMob Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />


</RelativeLayout>
