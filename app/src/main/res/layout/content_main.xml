<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="motiur_bdresult.bd.com.bdresult.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:fontFamily="serif"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textColor="#ffffff"
        android:shadowRadius="5"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:text="@string/result"
        android:textSize="20sp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:layout_below="@+id/textView"
        android:fillViewport="true">



     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40sp"
         android:paddingRight="40sp"
        android:orientation="vertical">




         <Button
            android:id="@+id/primaryResult1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape"
            android:fontFamily="serif"
            android:shadowColor="#A8A8A8"
            android:onClick="primaryResult1"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/primaryResult1"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />


        <Button
            android:id="@+id/primaryResult2"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="5sp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape"
            android:fontFamily="serif"
            android:shadowColor="#A8A8A8"
            android:onClick="primaryResult2"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/primaryResult2"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />




        <Button
            android:id="@+id/seconderyResult1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape"

            android:onClick="seconderyResult1"
            android:fontFamily="serif"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/seconderyResult1"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/seconderyResult2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape"
            android:onClick="seconderyResult2"
            android:fontFamily="serif"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/seconderyResult2"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

         <Button
             android:id="@+id/nuReslt"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:padding="5sp"
             android:layout_gravity="center"
             android:layout_marginTop="30dp"
             android:background="@drawable/buttonshape"
             android:onClick="nuResult"
             android:fontFamily="serif"
             android:shadowColor="#A8A8A8"
             android:shadowDx="0"
             android:shadowDy="0"
             android:shadowRadius="5"
             android:text="@string/nuResult"
             android:textColor="#FFFFFF"
             android:textSize="25sp" />

         <Button

             android:id="@+id/govtResult"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:padding="5sp"
             android:layout_gravity="center"
             android:layout_marginTop="30dp"
             android:background="@drawable/buttonshape"
             android:fontFamily="serif"
             android:shadowColor="#A8A8A8"
             android:shadowDx="0"
             android:shadowDy="0"
             android:onClick="govtResult"
             android:shadowRadius="5"
             android:foreground="@drawable/ripple_bg"
             android:text="@string/govtResultMain"
             android:textColor="#FFFFFF"
             android:textSize="25sp" />




         <Button
            android:id="@+id/nuAdmission_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape"
            android:onClick="nuAdmissionResult"
            android:fontFamily="serif"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/nuAdmissionResult"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />




         <Button
             android:id="@+id/publicResult"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:padding="5sp"
             android:layout_gravity="center"
             android:layout_marginTop="30dp"
             android:background="@drawable/buttonshape"
             android:fontFamily="serif"
             android:shadowColor="#A8A8A8"
             android:shadowDx="0"
             android:onClick="publicResult"
             android:shadowDy="0"
             android:shadowRadius="5"
             android:text="@string/admissionResult"
             android:textColor="#FFFFFF"
             android:textSize="25sp" />


     </LinearLayout>

    </ScrollView>

    <!-- view for AdMob Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />


</RelativeLayout>
